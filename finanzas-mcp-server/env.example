# =============================================================================
# FINANZAS MCP SERVER CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# Database (main user for schema introspection)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=finanzas_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=finanzas_db

# Read-only user for query execution
VANNA_DB_USER=vanna_reader
VANNA_DB_PASSWORD=your_readonly_password

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Qdrant (for context storage)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Qdrant collections
QDRANT_DDL_COLLECTION=vanna_ddl
QDRANT_DOC_COLLECTION=vanna_documentation
QDRANT_SQL_COLLECTION=vanna_sql

# Query limits
SQL_QUERY_TIMEOUT_SECONDS=30
SQL_MAX_RESULT_ROWS=1000

# Server
TRANSPORT=stdio
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# Logging
LOG_LEVEL=INFO

